{
  "name": "avbot",
  "version": "3.0.0",
  "description": "AvBot v3",
  "author": "Rahul Singh <dr@ph4nt0m.me>",
  "license": "GPL-3.0-only",
  "scripts": {
    "dev": "nodemon ./src/app/index.js",
    "start": "node ./src/app/index.js",
    "lint": "eslint ./src/**/*.js --max-warnings 0",
    "lint-fix": "eslint ./src/**/*.js --fix",
    "prettier": "prettier . --write",
    "postinstall": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/drph4nt0m/avbot-v3.git"
  },
  "bugs": {
    "url": "https://github.com/drph4nt0m/avbot-v3/issues"
  },
  "homepage": "https://github.com/drph4nt0m/avbot-v3#readme",
  "dependencies": {
    "@discordjs/opus": "^0.4.0",
    "@sentry/tracing": "^6.2.2",
    "@sentry/node": "^6.2.2",
    "axios": "^0.21.1",
    "commando-provider-mongo": "^2.1.0",
    "common-tags": "^1.8.0",
    "dayjs": "^1.10.4",
    "dblapi.js": "^2.4.1",
    "discord.js": "^12.5.1",
    "discord.js-commando": "github:discordjs/Commando",
    "dotenv": "^8.2.0",
    "ffmpeg-static": "^4.2.7",
    "gtts": "^0.2.1",
    "mongodb": "^3.6.4",
    "remove-accents": "^0.4.2",
    "string": "^3.3.3",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@mapbox/secret-shield": "^1.0.2",
    "babel-eslint": "^10.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.20.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^5.1.1",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && secret-shield --check-and-run",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "./src/**/*.js": [
      "npm run lint",
      "npm run prettier",
      "git add"
    ]
  }
}
